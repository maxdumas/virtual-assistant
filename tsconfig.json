{
  "compilerOptions": {

    "target": "esnext",

    // if TS 4.x or earlier
    // "moduleResolution": "nodenext",

    "jsx": "react-jsx",
    // enable latest features
    "lib": ["esnext"],
    "moduleDetection": "force",
    "module": "esnext",
    // if TS 5.x+
    "moduleResolution": "bundler",
    // add Bun type definitions
    "types": ["bun-types"],
    "allowImportingTsExtensions": true, // support JSX
    "allowJs": true, // allow default imports for CommonJS modules

    // best practices
    "strict": true,
    "noEmit": true, // allow importing `.js` from `.ts`
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
